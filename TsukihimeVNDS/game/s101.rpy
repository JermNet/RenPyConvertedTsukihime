    scene expression 'background/IMA_10.jpg' at bgpos
    
    show expression 'foreground/NERO_T02D.png' as i0 at fgpos(13, 0)
    
    "\"Y------\""
    
    "No mistake."
    
    "Inside his body, he's eating that person."
    
